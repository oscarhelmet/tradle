# Environment Variables Template
# Copy this file to .env and fill in your values

# JWT Secret - Use a strong secret for production
JWT_SECRET=your-jwt-secret-here

# Database Connection
MONGODB_URI=mongodb://localhost:27017/tradle

# Server Configuration
PORT=5000
NODE_ENV=development

# File Upload Settings
MAX_FILE_SIZE=10mb

# CORS Settings
# For development (multiple origins separated by commas):
# CORS_ORIGIN=http://localhost:3000,http://localhost:5598
# For production with specific domains:
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
# To allow all origins (less secure):
# CORS_ORIGIN=*
CORS_ORIGIN=http://localhost:3000

# External APIs
GEMINI_API_KEY=your-gemini-api-key

# Logging
LOG_LEVEL=debug
